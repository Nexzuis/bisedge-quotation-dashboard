# Supabase Configuration
# Get these values from https://supabase.com/dashboard → Your Project → Settings → API
VITE_SUPABASE_URL=https://your-project-id.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-public-key-here

# App Mode Configuration
# - 'local': Use IndexedDB only (current behavior, offline-only)
# - 'cloud': Use Supabase only (requires internet connection)
# - 'hybrid': Use both - local cache with cloud sync (recommended for production)
VITE_APP_MODE=local

# Feature Flags
VITE_ENABLE_OFFLINE=true
VITE_ENABLE_REALTIME=true
VITE_ENABLE_PRESENCE=true

# Real-Time Configuration (milliseconds)
VITE_PRESENCE_HEARTBEAT_MS=30000
VITE_SYNC_INTERVAL_MS=5000
